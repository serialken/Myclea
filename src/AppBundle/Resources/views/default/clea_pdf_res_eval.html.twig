{% extends "AppBundle:template:templatePDF.html.twig" %}

{% block body %}
    {#{{ dump(arrayDomainSubDomain) }}#}
    {%  set color = arrayColorDomain %}
    <div class="page">
        <div class="content ">

            <div class="grey ">
                <img src="{{   base_dir ~ asset('bundles/app/img/pdf1title.png') }}" alt="PDF Title">
            </div>

            <div class="border" >
                <p class="bold center">Résultats d'évaluation - Certification Socle de compétences et de connaissances</p>
                <div class="center blue bold arial-14" style="margin-top:-10px;margin-bottom: -20px;">Exemplaire Organisme de formation</div><br/>

            </div>

            <div style="margin-top:2%;padding-bottom:20%;">

                <div class="col-xs-4" style="margin-left:-2%;">
                    <div class="col-xs-11 grey" style="height:150px;">
                            <div class="underlineBold arial-18" >Individu</div><br/>
                        <p class="arial-18">
                            Nom d'usage: {{ studentInfos[0].lastName }}<br/>
                            Nom de naissance:<br/>
                            Prénom: {{ studentInfos[0].firstName }}<br/><br/>
                            Numéro de dossier:
                        </p>
                    </div>
                </div>

                <div class="col-xs-4" >
                    <div class="col-xs-11 grey" style="height:150px;">
                        <div class="underlineBold arial-18">Evaluateur</div><br/>
                        <p class="arial-18">
                            Nom: <br/>
                            Prénom:<br/>
                            Organisme de rattachement:<br/>
                            Téléphone:<br/>
                            Mail:
                        </p>
                    </div>
                </div>

                <div class="col-xs-4" >
                    <div class="col-xs-11 grey" style="height:150px;">
                        <div class="underlineBold arial-18" >Date de réalisation</div><br/>
                        <p class="arial-18">
                            {% if date > 0 %}
                                Evaluation réalisée:{{ date | date('d/m/Y') }}<br/>
                            {% else %}
                                Evaluation réalisée:<br/>
                            {% endif %}
                            <input type="checkbox" id="cbox1" value="premiere_checkbox"> <label class="arial-10-5 normal" >Evaluation préalable des acquis</label><br>
                            <input type="checkbox" id="cbox2" value="deuxieme_checkbox"> <label class="arial-10-5 normal">Evaluation intermédiaire</label><br>
                            <input type="checkbox" id="cbox3" value="deuxieme_checkbox"> <label class="arial-10-5 normal">Evaluation finale</label>
                        </p>
                    </div>
                </div>
            </div>

            <table class="table-bordered">
                <thead>
                    <tr height="30">
                        <th width="53%"></th>
                        <th width="5%" class="center arial-14 bold">Score</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                {% set cptD = 0 %}
                {% set cptSD = 0 %}

                {% for key,inter in arrayDomainSubDomain %}
                    {% for domain,subdomains in inter %}

                        <tr height="30" class="white">
                            <td  colspan="4" class="center caseHeight" style="{{ 'background-color:'~ color[cptD] }};{% if cptD == 6 %}color:#000000;{% endif %}">
                                {% set cptD = cptD + 1 %}
                                {{  'Domaine' ~ ' ' ~ cptD ~ ' : ' ~ domain | upper }}
                            </td>
                        </tr>

                        {% for subdomain,skills in subdomains %}
                            {% if subdomain != 'succeedDomain' and subdomain != 'score' %}

                                <tr height="30">

                                    <td class="white bold arial-10 caseHeight" style="{{ 'background-color:'~ color[cptD-1] }};
                                        {% if cptD == 7 %}color:#000000;{% endif %}">
                                        {% set cptSD = cptSD + 1 %}
                                        {{ 'Sous-domaine' ~ ' ' ~ cptSD ~ ' : ' ~ subdomain }}
                                    </td>

                                    <td class="caseHeight center" style="{{ 'background-color:'~ color[cptD-1] }};">
                                        {% if skills.succeedSubDomain is not same as("NO_DATA") %}
                                            {{ skills.score | number_format(2, ',', '') }}%
                                        {% endif %}
                                    </td>
                                    <td class="center bold arial-10">
                                        Eléments à travailler en formation
                                    </td>
                                </tr>

                                {% for skill,description in skills %}
                                    {% if skill != 'succeedSubDomain' and skill != 'score' %}
                                        <tr height="30">

                                            <td class="col-xs-6 arial-10 caseHeight" style="padding-left: 4%">
                                                {{ skill }}
                                            </td>
                                            <td class="center">
                                                {% if description.succeed is not same as("NO_DATA") %}
                                                    {{ (description.score / description.scoreMax * 100) | number_format(2, ',', '') }}%
                                                {% endif %}
                                            </td>

                                            <td>

                                            </td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div>
            <h3 class="underlineBold arial-14">Conclusion :</h3>
            <div style="margin-left: 4%">
                <input type="checkbox" id="c1" value="c1_checkbox"> <label class="arial-10-5 normal" >Proposition du dossier du candidat au jury de certification</label><br>
                <input type="checkbox" id="c2" value="c2_checkbox"> <label class="arial-10-5 normal">Préconisation de suivi d'un parcours de formation en vue d'obtenir la certification</label><br>
                <input type="checkbox" id="c3" value="c3_checkbox"> <label class="arial-10-5 normal">Orientation vers un autre dispositif avant l'entrée en formation</label>
            </div>
        </div>
    </div>

{% endblock %}
