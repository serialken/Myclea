{% extends "AppBundle:template:templatePDF.html.twig" %}

{% block body %}

    {%  set color = arrayColorDomain %}
    <div class="page">
        <div class="content">

            <div class="grey ">
                <img src="{{   base_dir ~ asset('bundles/app/img/pdf1title.png') }}" alt="PDF Title">
            </div>

            <div class="bottomBorder" style="margin-top:6%;">
                <div class="row">
                    <div class="col-xs-4 col-xs-offset-1">
                        {%  if date > 0 %}
                            <p class="bold col-xs-offset-1">Les résultats de votre évaluation du {{ date | date('d/m/Y') }}</p>
                        {% else %}
                            <p class="bold col-xs-offset-1">Les résultats de votre évaluation du </p>
                        {% endif %}

                    </div>

                    <div class="col-xs-7">
                        <div class="col-xs-2 col-xs-offset-1">
                            <p class="bold " style="">/Evaluation:</p>
                        </div>
                        <div class="col-xs-8">
                            <label class="col-xs-4">Préalable:<input type="checkbox" id="cbox1" value="checkbox_1"></label>
                            <label class="col-xs-4">Intermédiaire:<input type="checkbox" id="cbox2" value="checkbox_2"></label>
                            <label class="col-xs-4">Finale:<input type="checkbox" id="cbox3" value="checkbox_3"></label>
                        </div>
                    </div>
                </div>
            </div>

            <div style="margin-top:1%;padding-bottom:10%;">

                <div class="col-xs-4 grey" style="margin-left: -2%;margin-top:-0.5%;height:150px;">
                    <div class="col-xs-11 ">
                        <div class="underlineBold arial-18" >Individu</div><br/>
                        <p class="arial-18">
                            Nom d'usage: {{ studentInfos[0].lastName }}<br/>
                            Nom de naissance:<br/>
                            Prénom: {{ studentInfos[0].firstName }}
                        </p>
                    </div>
                </div>

                <div class="col-xs-4 grey" style="margin-left:2%;margin-top:-0.5%;height:150px;">
                    <div class="col-xs-11">
                        <div class="underlineBold arial-18">Evaluateur</div><br/>
                        <p class="arial-18">
                            Nom: <br/>
                            Prénom:<br/>
                            Organisme de rattachement:<br/>
                            Téléphone:<br/>
                            Mail:
                        </p>
                    </div>
                </div>

                <div class="col-xs-4" style="margin-top:-1%;">
                    <p class="col-xs-offset-5">Exemplaire à remettre au candidat</p>
                </div>
            </div>

            <table class="table-bordered" style="margin-top:3%;width:100%">
                <thead>
                <tr height="30">
                    <th width="53%" class="center col-xs-10">Domaines et sous-domaines</th>
                    <th width="5%" class="center col-xs-1">Score</th>
                </tr>
                </thead>
                <tbody>
                {% set cptD = 0 %}
                {% set cptSD = 0 %}
                {% for key,inter in arrayDomainSubDomain %}
                    {% for domain,subdomains in inter %}

                        <tr height="30" class="white caseHeight" style="{{ 'background-color:'~ color[cptD] }};{% if cptD == 6 %}color:#000000;{% endif %}">

                            {% set cptD = cptD + 1 %}

                            <td class="center">
                                {{  'Domaine' ~ ' ' ~ cptD ~ ' : ' ~ domain | upper }}
                            </td>

                            <td class="center">
                                {% if subdomains.succeedDomain.value is not same as("NO_DATA") %}
                                    {{ subdomains.succeedDomain.score | number_format(2, ',', '') }}%
                                {% endif %}
                            </td>
                        </tr>

                        {% for subdomain,skills in subdomains %}
                            {% if subdomain != 'succeedDomain' and subdomain != 'score' %}

                                {% set cptSD = cptSD + 1 %}

                                <tr height="30">

                                    <td class="arial-14 caseHeight" >
                                        {{ 'Sous-domaine' ~ ' ' ~ cptSD ~ ' : ' ~ subdomain }}
                                    </td>

                                    <td class="center">
                                        {% if skills.succeedSubDomain is not same as("NO_DATA") %}
                                            {{ skills.score | number_format(2, ',', '') }}%
                                        {% endif %}
                                    </td>
                                    </td>

                                </tr>
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

